<!DOCTYPE html>
<html>
<head>
  <title>Konradcafe</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
    <!-- Detecting device width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

</head>
<body>

  <div class="wrapper">

    <!-- Preloader -->

    <div id="preloader">
      <div id="status">
        <div class="status-mes"><h4>KONRAD</h4></div>
      </div>
    </div>

    <!-- Navigation start -->

    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
      <div class="container">

        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <!-- Logo images below are shown and hidden on scroll  -->
          <!-- White Logo -->
          <div class="col-md-4 logo_white">
            <%= image_tag "konrad_logo.png", {class: "navlogoXXX"}%>
         </div>
         <!-- Black logo -->
          <div class="col-md-3 logo_black">
           <%= image_tag "konrad_logo2.png", {class: "navlogo2"}%>
         </div>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#coffee">Events</a></li>
            <li><a href="#concerts">Eat & Drink</a></li>
            <li><a href="#gallery">Image Gallery</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>
        </div>

      </div>
    </nav>

    <!-- Navigation end -->

<%= yield %>

<!-- Footer start -->

    <footer id="footer">

      <div class="container">

        <div class="row">

          <div class="col-md-12">
            <p class="copy">
              Â© 2015 Konrad Cafe & Bar, All Rights Reserved.
            </p>
          </div>

        </div><!-- .row -->

      </div><!-- .container -->

    </footer>

    <!-- Footer end -->

  </div><!-- .wrapper -->

</body>
</html>
