<section class="section">

   <div class="container">

        <div class="row">
          <div class="col-md-12 long-down">
            <%= link_to "Create a new Event", new_event_path, {class: "btn-treehouse"} %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">

            <!-- ******* Published Events ******* -->
            <div class="circle circle-green col-xs-2">LIVE</div>
            <div class="col-xs-10"><h3>Published Events</h3></div>
            <div class="col-xs-12">
            <% @events.each do |event| %>
              <% if event.publish == "Published" %>
                <hr>

                <h3><%= event.title %></h3>
                <h4><%=  event.weekday %>  <%=  event.day %>.<%=  event.month %>.<%=  event.year %>, <%=  event.start %></h4>
                <h4><%=  event.subtitle %></h4>
                <div class="row">
                  <div class="col-md-8">
                    <div><%=  truncate(simple_format(event.body), escape: false, :length => 99) %></div>
                    <div><%= cl_image_tag event.photo, height: 150, width: 200, crop: :fill %></div>
                    <br>
                  </div>
                </div>

                <br>
                <i class="icon-md ion-ios-eye"></i>
                <%= link_to " View Event", event %> |
                <%= link_to " Edit Event", edit_event_path(event) %> |
                <%= link_to " Delete Event", event_path(event), method: :delete, data: {confirm: "Are you sure you want to delete?"} %>
              <% end %>
            <% end %>
            </div>



            <!-- ******* Not Published Events ******* -->
            <div class="col-xs-12"><hr style="padding-top:50px"></div>
            <div class="circle circle-red col-xs-2">NOPE</div>
            <div class="col-xs-10"><h3>Non-Published Events</h3></div>
            <div class="col-xs-12">
              <% @events.each do |event| %>
                <% if event.publish == "Not Published" %>
                  <hr>

                  <h3><%= event.title %></h3>
                 <h4><%=  event.weekday %>  <%=  event.day %>.<%=  event.month %>.<%=  event.year %>, <%=  event.start %></h4>
                  <h4><%=  event.subtitle %></h4>
                  <div class="row">
                    <div class="col-md-8">
                      <div><%=  truncate(simple_format(event.body), escape: false, :length => 99) %></div>
                      <div><%= cl_image_tag event.photo, height: 150, width: 200, crop: :fill %></div>
                      <br>
                    </div>
                  </div>

                  <br>
                  <i class="icon-md ion-ios-eye"></i>
                  <%= link_to " View Event", event %> |
                  <%= link_to " Edit Event", edit_event_path(event) %> |
                  <%= link_to " Delete Event", event_path(event), method: :delete, data: {confirm: "Are you sure you want to delete?"} %>
                <% end %>
              <% end %>
            </div>

            <!-- ******* Archived Events ******* -->
            <div class="col-xs-12"><hr style="padding-top:50px"></div>
            <div class="circle circle-yellow col-xs-2">ARCH</div>
            <div class="col-xs-10"><h3>Archived Events</h3></div>
            <div class="col-xs-12">
              <% @events.each do |event| %>
                <% if event.publish == "Archive" %>
                  <hr>

                  <h3><%= event.title %></h3>
                  <h4><%=  event.weekday %>  <%=  event.day %>.<%=  event.month %>.<%=  event.year %>, <%=  event.start %></h4>
                  <h4><%=  event.subtitle %></h4>
                  <div class="row">
                    <div class="col-md-8">
                      <div><%=  truncate(simple_format(event.body), escape: false, :length => 99) %></div>
                      <div><%= cl_image_tag event.photo, height: 150, width: 200, crop: :fill %></div>
                      <br>
                    </div>
                  </div>

                  <br>
                  <i class="icon-md ion-ios-eye"></i>
                  <%= link_to " View Event", event %> |
                  <%= link_to " Edit Event", edit_event_path(event) %> |
                  <%= link_to " Delete Event", event_path(event), method: :delete, data: {confirm: "Are you sure you want to delete?"} %>
                <% end %>
              <% end %>
            </div>


          </div>
        </div>
      </div>
</section>